#!/bin/bash

set +e

function help {
    echo "git redmine task depends TASK_NUMBER TASK_DEP_1 TASK_DEP_2 ..."
    exit 1
}

TASK="$1"
shift
DEPS="$@"

if [ "x$TASK" == "x" ]
then
    help
fi

echo "Set deps for task $TASK to $DEPS"
git config redmine.task.${TASK}.depends "$DEPS" || git config --add redmine.task.${TASK}.depends "$DEPS"
