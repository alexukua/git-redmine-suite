#!/bin/bash

if [ -n "$HELP" ]
then
    echo "    * git redmine self-upgrade"
    exit 1
fi

set -e

echo "Self-Upgrading git redmine ..."

CURPWD=$PWD
cd /tmp
rm -rf redmine-suite
git clone https://github.com/celogeek/git-redmine-suite.git
cd redmine-suite
git checkout master
CURPWD=$CURPWD exec ./install.sh $*
