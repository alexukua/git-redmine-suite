#!/bin/bash

MODULE="/usr/local/bin/git-project-$1"
set -e

if [ -x "$MODULE" ]
then
    shift
    exec $MODULE $*
else
    if [ "x$1" != "x" ]
    then
        echo "The file $MODULE is not present. Check your command"
    fi
    echo ""
    echo "The available command : "
    echo ""
    set +e
    for MODULE in /usr/local/bin/git-project-*
    do
        HELP=1 $MODULE
    done
    echo ""
    exit 1
fi
