#!/bin/bash

MODULE="$0-$1"
set -e

if [ -x "$MODULE" ]
then
    shift
    exec $MODULE $*
else
    if [ "x$HELP" == "x" ]
    then
        if [ "x$1" != "x" ]
        then
            echo "The file $MODULE is not present. Check your command"
            echo ""
        fi
        set +e
        for MODULE in $0-*
        do
            HELP=1 $MODULE
        done
        echo ""
    else
        source /usr/local/share/Git-Redmine-Suite/helpers/current_git_command
        GROUP=$(echo $CURRENT_GIT_COMMAND | /usr/bin/perl -pe 's/^git redmine (.*)/\U$1/')

        echo ""
        echo "[$GROUP]"
    fi
    exit 1
fi
