#!/bin/bash

MODULE="$0-$1"

if [ -x "$MODULE" ]
then
    shift
    exec $MODULE $*
else
    GROUP=$(basename "$0" | /usr/bin/perl -pe 's/\-/ /g; s/^git redmine (.*)/\U$1/; s/^git redmine/MAIN/; s/SELF/SELF-UPGRADE/')

    echo ""
    echo "[$GROUP]"
    if [ -z "$HELP" ]
    then
        if [ -n "$1" ]
        then
            echo "The file $MODULE is not present. Check your command"
            echo ""
        fi
        set +e
        for MODULE in $0-*
        do
            HELP=1 $MODULE
        done
        echo ""
    fi
    exit 1
fi
