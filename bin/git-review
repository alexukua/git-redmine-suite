#!/bin/bash

MODULE="/usr/local/bin/git-review-$1"
shift

set -e

if [ -x "$MODULE" ]
then
    exec $MODULE $*
else
    if [ "x$MODULE" != "x" ]
    then
        echo "The file $MODULE is not present. Check your command"
    fi
    echo ""
    echo "The available command : "
    echo ""
    set +e
    for MODULE in /usr/local/bin/git-review-*
    do
        HELP=1 $MODULE
    done
    echo ""
    exit 1
fi
