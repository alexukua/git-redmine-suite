#!/bin/bash

source /usr/local/share/Weborama-Git-Review/helpers/redmine-checkconf

set -e

echo "Your todo list :"
/usr/local/share/Weborama-Git-Review/helpers/redmine-get-tasks --auth_key="$REDMINE_AUTHKEY" --server_url="$REDMINE_URL" --project="$REDMINE_PROJECT" --assigned_to_id="$REDMINE_USER_ID" --status_id="$REDMINE_TASK_ASSIGNED"
echo ""
echo "The task in progress :"
/usr/local/share/Weborama-Git-Review/helpers/redmine-get-tasks --auth_key="$REDMINE_AUTHKEY" --server_url="$REDMINE_URL" --project="$REDMINE_PROJECT" --assigned_to_id="$REDMINE_USER_ID" --status_id="$REDMINE_TASK_INPROGRESS"
echo ""
